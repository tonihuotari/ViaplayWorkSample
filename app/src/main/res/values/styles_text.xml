<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textDefault" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textDefault.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textDefault.Large">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="textDefault.Large.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textDefault.Small">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="textDefault.Small.White">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>